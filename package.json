{
    "name": "tsdown-preset",
    "type": "module",
    "version": "1.0.3",
    "packageManager": "pnpm@10.29.3",
    "description": "An opinionated preset for tsdown.",
    "author": "lonewolfyx",
    "license": "MIT",
    "homepage": "https://github.com/lonewolfyx/tsdown-preset#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lonewolfyx/tsdown-preset.git"
    },
    "bugs": "https://github.com/lonewolfyx/tsdown-preset/issues",
    "keywords": [],
    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json"
    },
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsdown --watch",
        "build": "tsdown",
        "release": "npm publish",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "prepublishOnly": "pnpm build",
        "prepare": "simple-git-hooks"
    },
    "peerDependencies": {
        "tsdown": "^0.20.1"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^7.4.3",
        "@lonewolfyx/tsconfig": "^0.0.6",
        "@types/node": "^25.2.3",
        "eslint": "^9.39.3",
        "lint-staged": "^16.2.7",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.20.3",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
